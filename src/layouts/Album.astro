---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"catalog">["data"];

const {
  title,
  description,
  artist,
  pubDate,
  artFront,
  artBack,
  aboutMusic,
  aboutStudio,
  aboutArtwork,
  linkMp3,
  linkFlac,
  linkYoutube,
  linkBandcamp,
  linkSoundcloud,
} = Astro.props;

const showInfo = aboutMusic || aboutStudio || aboutArtwork;
const showLinks =
  linkMp3 || linkFlac || linkYoutube || linkBandcamp || linkSoundcloud;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div>
          <img width={1020} height={510} src={artFront} alt="" />
          <img width={1020} height={510} src={artBack} alt="" />
        </div>
        <div>
          <div>
            <h1>{title} by {artist}</h1>
            <div>
              <FormattedDate date={pubDate} />
            </div>
          </div>
          <slot />
          {
            showInfo && (
              <div>
                {linkMp3 && <a href={linkMp3}>MP3 download</a>}
                {linkFlac && <a href={linkFlac}>FLAC download</a>}
                {linkYoutube && (
                  <a href={linkYoutube} target="_blank">
                    Listen on Youtube
                  </a>
                )}
                {linkBandcamp && (
                  <a href={linkBandcamp} target="_blank">
                    Listen on Bandcamp
                  </a>
                )}
                {linkSoundcloud && (
                  <a href={linkSoundcloud} target="_blank">
                    Listen on Soundcloud
                  </a>
                )}
              </div>
            )
          }

          {
            showLinks && (
              <div>
                {aboutMusic && <p>{aboutMusic}</p>}
                {aboutStudio && <p>{aboutStudio}</p>}
                {aboutArtwork && <p>{aboutArtwork}</p>}
              </div>
            )
          }
        </div>
      </article>
      <a href="/"> volver </a>
    </main>
    <Footer />
  </body>
</html>
