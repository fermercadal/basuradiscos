---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"catalog">["data"];

const {
  title,
  description,
  artist,
  pubDate,
  artFront,
  artBack,
  aboutMusic,
  aboutStudio,
  aboutArtwork,
  linkMp3,
  linkFlac,
  linkYoutube,
  linkBandcamp,
  linkSoundcloud,
} = Astro.props;

const showInfo = aboutMusic || aboutStudio || aboutArtwork;
const showLinks =
  linkMp3 || linkFlac || linkYoutube || linkBandcamp || linkSoundcloud;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <article class="p-6 bg-stone-100">
        <h2>
          <strong class="block text-xl">{title}</strong>
          <span>{artist}</span>
        </h2>
        <section class="py-6">
          <h3 class="sr-only">Artwork</h3>
          <div class="flex flex-row flex-wrap gap-6">
            <img width={400} height={400} src={artFront} alt="" />
            <img width={400} height={400} src={artBack} alt="" />
          </div>
        </section>
        <section class="pb-6">
          <h3>Tracklist</h3>
          <div class="*:list-decimal *:list-inside">
            <slot />
          </div>
        </section>
        <section>
          <h3 class="sr-only">Album credits</h3>
          {
            showInfo && (
              <>
                {aboutMusic && <p>{aboutMusic}</p>}
                {aboutStudio && <p>{aboutStudio}</p>}
                {aboutArtwork && <p>{aboutArtwork}</p>}
              </>
            )
          }
          <time>Release date: <FormattedDate date={pubDate} /></time>
        </section>
        {
          showLinks && (
            <section>
              <h3>Album links</h3>
              {linkMp3 && <a href={linkMp3}>MP3 download</a>}
              {linkFlac && <a href={linkFlac}>FLAC download</a>}
              {linkYoutube && (
                <a href={linkYoutube} target="_blank">
                  Listen on Youtube
                </a>
              )}
              {linkBandcamp && (
                <a href={linkBandcamp} target="_blank">
                  Listen on Bandcamp
                </a>
              )}
              {linkSoundcloud && (
                <a href={linkSoundcloud} target="_blank">
                  Listen on Soundcloud
                </a>
              )}
            </section>
          )
        }
      </article>

      <a class="inline-block m-6" href="/">volver</a>

      <Footer />
    </main>
  </body>
</html>
