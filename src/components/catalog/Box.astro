---
import type { CollectionEntry } from "astro:content";
import Album from "./Album.astro";

type Props = {
  title: string;
  albums: CollectionEntry<"catalog">[];
};

const { title, albums } = Astro.props;
---

<section>
  <h2>{title}</h2>
  {albums.map((post) => <Album {...post} />)}
</section>
