---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = CollectionEntry<"catalog">;

const post = Astro.props;
---

<article class="grow-0 shrink-0 p-6">
  <a class="inline-block mb-4" href={`/${post.slug}/`}>
    <Image width={400} height={400} src={post.data.artFront} alt="" />
  </a>
  <h3>
    <strong class="text-xl">{post.data.title}</strong>
    <div>{post.data.artist}</div>
  </h3>
  <div class="mt-4">
    <a
      class="inline-block p-1 bg-slate-200 text-slate-800 rounded-md"
      href={`/${post.slug}/`}>+ info</a
    >
    <a
      class="inline-block p-1 bg-slate-800 text-slate-100 rounded-md"
      href={`/${post.data.linkMp3}/`}>Descargar</a
    >
  </div>
</article>
