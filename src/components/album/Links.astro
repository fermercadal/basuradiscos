---
interface Props {
  linkMp3?: string;
  linkFlac?: string;
  linkYoutube?: string;
  linkBandcamp?: string;
  linkSoundcloud?: string;
}

const { linkMp3, linkFlac, linkYoutube, linkBandcamp, linkSoundcloud } =
  Astro.props;
---

<section class="pb-6">
  <h3 class="sr-only">Album links</h3>
  {
    linkMp3 && (
      <a
        class="inline-block p-2 bg-slate-800 text-slate-100 rounded-md"
        href={linkMp3}
      >
        MP3 download
      </a>
    )
  }
  {
    linkFlac && (
      <a
        class="inline-block p-2 bg-slate-800 text-slate-100 rounded-md"
        href={linkFlac}
      >
        FLAC download
      </a>
    )
  }
  {
    linkYoutube && (
      <a
        class="inline-block p-2 bg-slate-800 text-slate-100 rounded-md"
        href={linkYoutube}
        target="_blank"
      >
        Listen on Youtube
      </a>
    )
  }
  {
    linkBandcamp && (
      <a
        class="inline-block p-2 bg-slate-800 text-slate-100 rounded-md"
        href={linkBandcamp}
        target="_blank"
      >
        Listen on Bandcamp
      </a>
    )
  }
  {
    linkSoundcloud && (
      <a
        class="inline-block p-2 bg-slate-800 text-slate-100 rounded-md"
        href={linkSoundcloud}
        target="_blank"
      >
        Listen on Soundcloud
      </a>
    )
  }
</section>
